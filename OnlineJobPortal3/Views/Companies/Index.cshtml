@model IEnumerable<OnlineJobPortal3.Models.Company>

@{
    ViewBag.Title = "Index";
}
<div style="margin-top:150px;height:400px;">
    <h2>Welcome to company section</h2>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/company_1.jpg" alt="Chania">
                <div class="carousel-caption">
                    <h3 style="color:black">Welcome </h3>
                    <p style="color:black">You can now get as many wonderful employee to fill your limited positions</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Content/company_2.jpg" alt="Chicago">
                <div class="carousel-caption">
                    <h3 style="color:black">Connect</h3>
                    <p style="color:black">Connect to as many job seeker to find the best</p>
                </div>
            </div>

          
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>


